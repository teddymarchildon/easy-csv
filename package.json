{
  "name": "easy-sheet",
  "version": "0.1.0",
  "description": "Lightweight macOS CSV editor built with Electron + React",
  "private": true,
  "type": "module",
  "main": "out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "lint": "eslint . --ext .ts,.tsx",
    "check-types": "tsc --noEmit",
    "postinstall": "if [ -d node_modules/electron/dist/Electron.app ]; then plutil -replace CFBundleName -string 'Easy CSV' node_modules/electron/dist/Electron.app/Contents/Info.plist && plutil -replace CFBundleDisplayName -string 'Easy CSV' node_modules/electron/dist/Electron.app/Contents/Info.plist; fi"
  },
  "engines": {
    "node": ">=18.18.0"
  },
  "dependencies": {
    "@tanstack/react-table": "^8.13.0",
    "@tanstack/react-virtual": "^3.5.0",
    "classnames": "^2.5.1",
    "electron-log": "^5.1.2",
    "electron-store": "^10.0.1",
    "papaparse": "^5.4.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zustand": "^5.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.2",
    "@vitejs/plugin-react": "^4.3.2",
    "@types/node": "^22.7.4",
    "@types/react": "^18.3.8",
    "@types/react-dom": "^18.3.2",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "electron": "^30.0.9",
    "electron-vite": "^2.3.0",
    "eslint": "^9.11.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.9",
    "typescript": "^5.6.3",
    "vite": "^5.4.7"
  }
}
